<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/cardview_default_radius">
  <data>
    <variable
        name="item"
        type="com.simxdeveloper.catalogmovie.ui.mvvm.ItemMovieViewModel"/>
  </data>
  <android.support.v7.widget.CardView
      android:id="@+id/card_view"
      android:onClick="@{()->item.itemClick()}"
      android:elevation="@dimen/cardview_default_elevation"
      android:layout_margin="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_margin="2dp"
          android:layout_width="match_parent"
          android:layout_height="200dp">
        <ImageView
            tools:img_movie="@{item.imgUrl}"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_movie"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/img_movie"
            android:id="@+id/tv_title"
            android:text="@{item.titleMovie()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_below="@id/tv_title"
            android:layout_above="@+id/tv_date"
            android:text= "@{item.originalDesc()}"
            android:layout_toRightOf="@+id/img_movie"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:text="@{item.releaseDate()}"
            android:layout_toRightOf="@+id/img_movie"
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

      </RelativeLayout>
      <LinearLayout
          android:layout_toRightOf="@+id/img_movie"
          android:layout_below="@+id/tv_desc"
          android:layout_above="@+id/tv_date"
          android:weightSum="2"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <Button
            android:onClick="@{()->item.share()}"
            android:id="@+id/btn_share"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/share"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="@{()->item.details()}"
            android:id="@+id/btn_detail"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/detail"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>
